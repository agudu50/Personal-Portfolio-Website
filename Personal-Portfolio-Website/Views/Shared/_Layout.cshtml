    <style>
        .profile-photo {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 80px; /* Rounded square */
            border: 3px solid rgba(255, 255, 255, 0.2); /* Light border */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .profile-photo:hover {
                transform: scale(1.05);
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            }
    </style>

</head>



