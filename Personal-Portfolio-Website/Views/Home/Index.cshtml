            <div class="col-lg-7">
                <div class="card shadow-sm border-0 p-4 rounded-4 bg-light" data-aos="fade-up" data-aos-delay="200">
                    <h4 class="mb-4 fw-semibold text-primary">📬 Send Me a Message</h4>

                    @using (Html.BeginForm("SendEmail", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row g-3">

                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success text-center">@TempData["Success"]</div>
                            }

                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                            <div class="col-md-6">
                                <label class="form-label text-dark fw-semibold hover-effect">Your Full Name</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control rounded-3", placeholder = "Enter your name", required = "required" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-dark fw-semibold hover-effect">Your Email</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control rounded-3", type = "email", placeholder = "Enter your email", required = "required" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-12">
                                <label class="form-label text-dark fw-semibold hover-effect">Subject</label>
                                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control rounded-3", placeholder = "Subject", required = "required" })
                                @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-12">
                                <label class="form-label text-dark fw-semibold hover-effect">Message</label>
                                @Html.TextAreaFor(m => m.Message, new { @class = "form-control rounded-3", rows = 6, placeholder = "Write your message here...", required = "required" })
                                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-12 text-center mt-3">
                                <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill shadow-sm">
                                    📩 Send Message
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- End Contact Form -->


        </div>
    </div>
</section>
