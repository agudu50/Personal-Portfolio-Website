@model Personal_Portfolio_Website.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    .hover-effect:hover {
        color: #0d6efd !important; /* Bootstrap primary blue */
        text-decoration: underline;
        transition: 0.3s ease-in-out;
    }
</style>








<!-- Contact Section -->
<section id="contact" class="contact section">




    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Contact</h2>
        <p  style="color: #555; font-weight:700;">If you have a project, question, or just want to say hello — feel free to send a message.</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <!-- Contact Info -->
            <div class="col-lg-5">
                <div class="info-wrap">
                    <div class="info-item d-flex">
                        <i class="bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>Address</h3>
                            <p>Achimota, Accra, Ghana</p>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="info-item d-flex align-items-start">
                        <i class="bi bi-telephone flex-shrink-0 text-primary fs-4 me-3"></i>
                        <div>
                            <h5 class="fw-bold mb-1">Call Me</h5>
                            <a href="tel:+233558524473" class="text-decoration-none text-dark fw-semibold hover-effect">
                                +233 558 524 473
                            </a>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="info-item d-flex align-items-start mt-4">
                        <i class="bi bi-envelope flex-shrink-0 text-danger fs-4 me-3"></i>
                        <div>
                            <h5 class="fw-bold mb-1">Email</h5>
                            <a href="mailto:devtony2020@gmail.com" class="text-decoration-none text-dark fw-semibold hover-effect">
                                devtony2020@gmail.com
                            </a>
                        </div>
                    </div>


                    <iframe src="https://maps.google.com/maps?q=Achimota,%20Accra&t=&z=13&ie=UTF8&iwloc=&output=embed"
                            frameborder="0" style="width: 100%; height: 270px; border: 0;" allowfullscreen></iframe>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-lg-7">
                <div class="card shadow-sm border-0 p-4 rounded-4 bg-light" data-aos="fade-up" data-aos-delay="200">
                    <h4 class="mb-4 fw-semibold text-primary">📬 Send Me a Message</h4>

                    @using (Html.BeginForm("SendEmail", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row g-3">

                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show text-center" role="alert" id="success-alert">
                                    @TempData["Success"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }



                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert" id="validation-summary-alert">
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    @Html.ValidationSummary(true, "")
                                </div>
                            }


                            <div class="col-md-6">
                                <label class="form-label text-dark fw-semibold">Your Full Name</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control rounded-3", placeholder = "Enter your full name", required = "required" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-dark fw-semibold">Your Email</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control rounded-3", type = "email", placeholder = "Enter your valid email", required = "required" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-12">
                                <label class="form-label text-dark fw-semibold">Subject</label>
                                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control rounded-3", placeholder = "Subject", required = "required" })
                                @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-12">
                                <label class="form-label text-dark fw-semibold">Message</label>
                                @Html.TextAreaFor(m => m.Message, new { @class = "form-control rounded-3", rows = 6, placeholder = "Write your message here...", required = "required" })
                                @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-12 text-center mt-3">
                                <button type="submit" class="btn btn-primary btn-lg px-4 rounded-pill shadow-sm">
                                    📩 Send Message
                                </button>
                            </div>
                        </div>

                    }







                </div>
            </div>
            <!-- End Contact Form -->


        </div>
    </div>






</section>
<script>
    // Auto-dismiss success alert after 5 seconds
    setTimeout(function () {
        const alert = bootstrap.Alert.getOrCreateInstance(document.getElementById('success-alert'));
        if (alert) alert.close();
    }, 9000); // 5000ms = 5 seconds

    setTimeout(function () {
        const alert = bootstrap.Alert.getOrCreateInstance(document.getElementById('validation-summary-alert'));
        if (alert) alert.close();
    }, 10000);


  
</script>